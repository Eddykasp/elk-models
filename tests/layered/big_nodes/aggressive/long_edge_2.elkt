algorithm: layered
layering.wideNodesOnMultipleLayers: AGGRESSIVE

node bignode {
	layout [ size: 250, 50 ]
	portConstraints: FIXED_SIDE
	label L1: "bigone"
	port pb0 {
		layout [ size: 10, 10 ]
		side: WEST
	}
	port pb1 {
		layout [ size: 10, 10 ]
		side: WEST
	}
	port pb2 {
		layout [ size: 10, 10 ]
		side: EAST
	}
	port pb3 {
		layout [ size: 10, 10 ]
		side: EAST
	}
}
node n0 {
	layout [ size: 50, 50 ]
	portConstraints: FIXED_SIDE
	port p01 {
		layout [ size: 10, 10 ]
		side: WEST
	}
	port p02 {
		layout [ size: 10, 10 ]
		side: EAST
	}
}
node n1 {
	layout [ size: 50, 50 ]
	portConstraints: FIXED_SIDE
	port p11 {
		layout [ size: 10, 10 ]
		side: WEST
	}
	port p12 {
		layout [ size: 10, 10 ]
		side: EAST
	}
}
node n2 {
	layout [ size: 50, 50 ]
	portConstraints: FIXED_SIDE
	port p21 {
		layout [ size: 10, 10 ]
		side: WEST
	}
	port p22 {
		layout [ size: 10, 10 ]
		side: EAST
	}
}
node n3 {
	layout [ size: 50, 50 ]
	portConstraints: FIXED_SIDE
	port p31 {
		layout [ size: 10, 10 ]
		side: WEST
	}
	port p32 {
		layout [ size: 10, 10 ]
		side: WEST
	}
	port p33 {
		layout [ size: 10, 10 ]
		side: EAST
	}
}
edge E1: bignode.pb2 -> n3.p32
edge E2: n0.p02 -> bignode.pb1
edge E3: n0.p02 -> n1.p11
edge E4: n1.p12 -> n2.p21
edge E5: n2.p22 -> n3.p31
