/* Example illustrates the drawback (very tall drawing) of drawing all edges straight. */

node n0
node n1 {
	layout [ size: 20, 200 ]
	portConstraints: FIXED_POS
	port p11 {
		layout [ position: -5, 190 ]
	}
	port p12 {
		layout [ position: 20, 5 ]
	}
}
node n2 {
	layout [ size: 20, 200 ]
	portConstraints: FIXED_POS
	port p21 {
		layout [ position: -5, 190 ]
	}
	port p22 {
		layout [ position: 20, 5 ]
	}
}
node n3
edge E1: n0 -> n1.p11
edge E2: n1.p12 -> n2.p21
edge E3: n2.p22 -> n3
