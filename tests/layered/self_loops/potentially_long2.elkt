/**
 * During node placement it happened that the self loop 
 * in this example became unnecessarily long.
 * Both the bk and the network simplex placers should avoid this now.
 */

elk.direction: RIGHT
randomSeed: 2
fixedAlignment: RIGHTUP
nodePlacement.strategy: NETWORK_SIMPLEX

node x1 {
	layout [ size: 40, 320 ]
}
node x2
node x3
node x4 {
	layout [ size: 40, 320 ]
}
edge E1: x1 -> x4 {
	layout [
		section ES1 []
	]
}
edge E2: x1 -> x2 {
	layout [
		section ES2 []
	]
}
edge E3: x2 -> x3 {
	layout [
		section ES3 []
	]
}
edge E4: x2 -> x2 {
	layout [
		section ES4 []
	]
}
edge E5: x3 -> x4 {
	layout [
		section ES5 []
	]
}
edge E6: x3 -> x3 {
	layout [
		section ES6 []
	]
}
