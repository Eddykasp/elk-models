/**
 * During node placement it happened that the self loop 
 * in this example became unnecessarily long.
 * Both the bk and the network simplex placers should avoid this now.
 */

fixedAlignment: RIGHTUP

node x1 {
	layout [ size: 40, 320 ]
}
node x2 {
	portConstraints: FIXED_SIDE
	port p1 {
		side: WEST
	}
	port p2 {
		side: EAST
	}
}
node x3 {
	portConstraints: FIXED_SIDE
	port p1_g3484 {
		side: EAST
	}
	port p2_g9854 {
		side: EAST
	}
}
node x4 {
	layout [ size: 40, 320 ]
}
edge E1: x1 -> x2
edge E2: x1 -> x4
edge E3: x2.p2 -> x3 {
	priority.direction: 10
}
edge E4: x3.p2_g9854 -> x4
edge E5: x3.p1_g3484 -> x2.p1
