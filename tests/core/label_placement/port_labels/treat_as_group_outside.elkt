node n1 {
	nodeSize.constraints: "MINIMUM_SIZE PORTS PORT_LABELS"
	portConstraints: FIXED_SIDE
	portLabels.nextToPortIfPossible: true
	portLabels.treatAsGroup: false
	portLabels.placement: OUTSIDE
	
	port west1 {
		^port.side: WEST
		label "Label 1"
		label "Label 2"
	}
	port west2 {
		^port.side: WEST
		label "Label 1"
		label "Label 2"
	}
	port east1 {
		^port.side: EAST
		label "Label 1"
		label "Label 2"
	}
}

node n2

edge n2 -> n1.west2
