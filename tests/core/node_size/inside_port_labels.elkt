// Basic tests size computation with inside port labels.

node WithNodeLabel {
	portLabels.placement: INSIDE
	portConstraints: FIXED_SIDE
	nodeSize.constraints: "NODE_LABELS PORTS PORT_LABELS"
	nodeLabels.placement: "INSIDE H_CENTER V_CENTER"
	
	label "A rather long node label"
	
	port P1 {
		layout [ size: 8, 8 ]
		^port.side: WEST
		label "The port P1"
	}
	port P2 {
		layout [ size: 8, 8 ]
		^port.side: WEST
		label "The port P2"
	}
	port P3 {
		layout [ size: 8, 8 ]
		^port.side: WEST
		label "The port P3"
	}
	port P4 {
		layout [ size: 8, 8 ]
		^port.side: EAST
		label "The port P4"
	}
	port P5 {
		layout [ size: 8, 8 ]
		^port.side: EAST
		label "The port P5"
	}
	port P6 {
		layout [ size: 8, 8 ]
		^port.side: EAST
		label "The port P6"
	}
}

node WithOutNodeLabel {
	portLabels.placement: INSIDE
	portConstraints: FIXED_SIDE
	nodeSize.constraints: "PORTS PORT_LABELS"
	
	port P1 {
		layout [ size: 8, 8 ]
		^port.side: WEST
		label "The port P1"
	}
	port P2 {
		layout [ size: 8, 8 ]
		^port.side: WEST
		label "The port P2"
	}
	port P3 {
		layout [ size: 8, 8 ]
		^port.side: WEST
		label "The port P3"
	}
	port P4 {
		layout [ size: 8, 8 ]
		^port.side: EAST
		label "The port P4"
	}
	port P5 {
		layout [ size: 8, 8 ]
		^port.side: EAST
		label "The port P5"
	}
	port P6 {
		layout [ size: 8, 8 ]
		^port.side: EAST
		label "The port P6"
	}
}
